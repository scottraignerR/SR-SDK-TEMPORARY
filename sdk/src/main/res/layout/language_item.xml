<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_24">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@+id/label"
        android:layout_alignParentStart="true"
        android:background="@color/language_bg" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:src="@drawable/en_us" />

    <TextView
        android:id="@+id/label"
        style="@style/SpeechButton_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:background="@drawable/lang_highlight"
        android:backgroundTint="@color/language_bg"
        android:text="@string/zoom_level_1"
        android:textAlignment="center"
        android:textColor="@color/language_text_color" />

</RelativeLayout>
