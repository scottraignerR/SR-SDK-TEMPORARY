<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/wearActionBarColor"
    android:gravity="center_vertical"
    android:layout_height="60dp">

    <TextView
        style="@style/SpeechButton_smallest"
        android:padding="@dimen/dp_8"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_help"
        android:contentDescription="@string/show_help"
        android:id="@+id/show_help"/>

    <TextView
        style="@style/SpeechButton_smallest"
        android:padding="@dimen/dp_8"
        android:layout_toLeftOf="@+id/show_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_controls"
        android:contentDescription="@string/my_controls"
        android:id="@+id/my_controls"/>

</RelativeLayout>