<resources xmlns:android="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="WearStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="fontPath">fonts/Montserrat-Medium.otf</item>
        <item name="fontThin">fonts/Montserrat-Medium.otf</item>
        <item name="android:textViewStyle">@style/SpeechButton</item>
    </style>

    <style name="SpeechButton_smallest" parent="android:Widget.Holo.TextView">
        <item name="fontPath">?attr/fontThin</item>
        <item name="android:textSize">@dimen/font_smallest</item>
    </style>

    <style name="SpeechButton_small" parent="android:Widget.Holo.TextView">
        <item name="fontPath">?attr/fontThin</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SpeechButton_small_thin" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="SpeechButton" parent="android:Widget.Holo.TextView">
        <item name="fontPath">?attr/fontThin</item>
        <item name="android:textSize">@dimen/font_med</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpeechButton_large" parent="android:Widget.Holo.TextView">
        <item name="fontPath">?attr/fontThin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="SpeechButton_large_bold" parent="android:Widget.Holo.TextView">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>


</resources>